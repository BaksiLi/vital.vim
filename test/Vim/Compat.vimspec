Describe Vim.Compat
  Before all
    let VC = vital#of('vital').import('Vim.Compat')
  End

  Context .has_version()
    It returns false when passed invalid argument
      Assert Falsy(VC.has_version('hogera'))
      Assert Falsy(VC.has_version(''))
    End
  End

  Context .shiftwidth()
    It gives you &shiftwidth
      Assert Equals(VC.shiftwidth(), &shiftwidth)
    End
    " TODO add other specs, refering Bram's Patch 7.3.694
  End
End
